{
  "name": "@toddlowell/texttopath",
  "version": "1.0.1",
  "description": "Get path values for a given text and font.",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "tsc --emitDeclarationOnly && babel src --out-dir dist --extensions \".ts\" --source-maps inline --copy-files",
    "build:umd": "webpack --mode=development --output-filename=index.umd.js",
    "build:umd.min": "webpack --mode=production --output-filename=index.umd.min.js",
    "lint": "eslint ./src",
    "test": "jest ./src",
    "test:coverage": "jest ./src --collectCoverage",
    "report-coverage": "codecov",
    "validate": "npm-run-all --parallel lint test:coverage build"
  },
  "author": "Raaed M. Kabir <raaed.kabir@gmail.com> (https://www.raaedkabir.com/)",
  "homepage": "https://www.raaedkabir.com/",
  "repository": {
    "type": "git",
    "url": "https://github.com/ToddLowell/text-to-svg-path.git"
  },
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "opentype.js": "^1.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.17",
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@babel/preset-typescript": "^7.12.17",
    "@types/jest": "^26.0.20",
    "@types/opentype.js": "^0.7.2",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "codecov": "^3.8.1",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^8.0.17",
    "typescript": "^4.1.5",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0"
  }
}
