{
  "name": "texttosvg",
  "version": "1.0.0",
  "description": "Get path values for a given text and font.",
  "main": "src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel src --out-dir=dist --copy-files",
    "build:umd": "webpack --mode=development --output-filename=index.umd.js",
    "build:umd.min": "webpack --mode=production --output-filename=index.umd.min.js",
    "lint": "eslint ./src",
    "test": "jest",
    "test:coverage": "jest --collectCoverage",
    "validate": "npm-run-all --parallel lint test:coverage build"
  },
  "author": "Raaed M. Kabir <raaed.kabir@gmail.com> (https://www.raaedkabir.com/)",
  "license": "MIT",
  "dependencies": {
    "opentype.js": "^1.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.17",
    "@babel/core": "^7.12.17",
    "@babel/preset-env": "^7.12.17",
    "@types/opentype.js": "^0.7.2",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.23.0",
    "webpack-cli": "^4.5.0"
  }
}
